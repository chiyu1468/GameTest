<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Strat"
        android:onClick="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonTwo"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="1" />

        <Button
            android:id="@+id/ButtonSeven"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="2"/>

        <Button
            android:id="@+id/ButtonSix"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonNine"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="4"/>

        <Button
            android:id="@+id/ButtonFive"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="5"/>

        <Button
            android:id="@+id/ButtonOne"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonFour"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="7"/>

        <Button
            android:id="@+id/ButtonThree"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="8"/>

        <Button
            android:id="@+id/ButtonEight"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:onClick="ChessClick"
            android:textSize="24sp"
            android:textStyle="bold"
            android:tag="9" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4274ff"
            android:onClick="BlueClick"
            android:text="Small"
            android:tag="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4274ff"
            android:onClick="BlueClick"
            android:text="Middle"
            android:tag="2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4274ff"
            android:onClick="BlueClick"
            android:text="Biggg"
            android:tag="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff9d42"
            android:onClick="OrangeClick"
            android:text="Small"
            android:tag="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff9d42"
            android:onClick="OrangeClick"
            android:text="Middle"
            android:tag="2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff9d42"
            android:onClick="OrangeClick"
            android:text="Biggg"
            android:tag="3"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="test1"
        android:text="GO"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="test2"
        android:text="test"/>


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
</LinearLayout>
